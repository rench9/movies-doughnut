<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <android.support.v7.widget.CardView
        android:id="@id/cvContainer"
        android:layout_width="@dimen/filter_w"
        android:layout_height="@dimen/search_bar_h"
        android:layout_margin="@dimen/unit3"
        app:cardBackgroundColor="@color/shade0"
        app:cardCornerRadius="@dimen/search_bar_r"
        app:cardElevation="@dimen/elevation3">

        <TextView
            android:id="@id/tvItem"
            style="@style/typography_body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="marquee"
            android:textAlignment="center"
            android:textColor="@color/sky_blue_s1"
            android:textSize="@dimen/typography_body2"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>
</RelativeLayout>